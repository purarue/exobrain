#!/bin/bash
# can supply arguments to use as git commit:
# ./push changed these files

cd "$(dirname "${BASH_SOURCE[0]}")" || exit

commit() {
  if [[ -n "$1" ]]; then
    git commit -m "$*"
    return $?
  else
    git commit # prompt for editor
    return $?
  fi
}

./build &&
	git add . &&
	commit "$@" &&
	git push
