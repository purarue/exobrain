---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import urljoin from '../helpers/join';
import url_for from '../helpers/url';

type PropsBase = CollectionEntry<'notes'>['data'];
interface Props extends PropsBase {
	slug: string;
}

const { title, slug } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={title} />
		<script src={url_for("launch_in_editor.js")} defer></script>
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.prose {
				width: 1440px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--offwhite));
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article data-slug={urljoin("notes", slug)}>
				<div class="prose">
					<div class="title">
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
