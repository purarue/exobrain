---
import BaseHead from "./../components/BaseHead.astro";
import Header from "./../components/Header.astro";
import Footer from "./../components/Footer.astro";

type Props = {
	title: string;
	description: string;
	disableFooter?: boolean;
	fullWidth?: boolean;
};

const { title, description, disableFooter, fullWidth } = Astro.props;
const fw = fullWidth ? "100%" : "1080px";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style define:vars={{ fw }}>
			main {
				width: var(--fw)
			}
			.title {
				margin: 0;
				color: rgb(var(--offwhite));
				line-height: 1;
			}
			/* reduce font size if screen is small */
			@media (max-width: 768px) {
				main {
					width: 100%;
				}
				.title {
					font-size: 1.75rem;
				}
			}
			@media (max-width: 500px) {
				.title {
					font-size: 1.25rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		{!disableFooter && <Footer />}
	</body>
</html>
